block component
  .row
    .col-12.col-xxl-6
      +ComponentCard({title:'Progress Tab'}).my-4
        .card.theme-wizard.mb-5(data-theme-wizard)
          .card-header.bg-100.pt-3.pb-2.border-bottom-0
            +WizardHeader({tab1:'#bootstrap-wizard-tab1',tab2:'#bootstrap-wizard-tab2',tab3:'#bootstrap-wizard-tab3',tab4:'#bootstrap-wizard-tab4'})
          .card-body.pt-4.pb-0
            +WizardContent({
              name: 'bootstrap-wizard',
              formId: 'wizardForm',
              tab1: 'bootstrap-wizard-tab1',
              tab2: 'bootstrap-wizard-tab2',
              tab3: 'bootstrap-wizard-tab3',
              tab4: 'bootstrap-wizard-tab4',
              validation: false,
              url: `${CWD}${paths['forms-wizard']}`
            })
          .card-footer.border-top-0(data-wizard-footer)
            +WizardPager
    .col-12.col-xxl-6
      +ComponentCard({title:'With Validation'}).my-4
        .card.theme-wizard.mb-5(data-theme-wizard)
          .card-header.bg-100.pt-3.pb-2.border-bottom-0
            +WizardHeader({tab1:'#bootstrap-wizard-validation-tab1',tab2:'#bootstrap-wizard-validation-tab2',tab3:'#bootstrap-wizard-validation-tab3',tab4:'#bootstrap-wizard-validation-tab4'})
          .card-body.pt-4.pb-0
            +WizardContent({
              name: 'bootstrap-wizard-validation', 
              formId: 'wizardValidationForm',
              tab1: 'bootstrap-wizard-validation-tab1',
              tab2: 'bootstrap-wizard-validation-tab2',
              tab3: 'bootstrap-wizard-validation-tab3',
              tab4: 'bootstrap-wizard-validation-tab4',
              validation: true,
              url: `${CWD}${paths['forms-wizard']}`
            })
          .card-footer.border-top-0(data-wizard-footer)
            +WizardPager
    #error-modal.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
      .modal-dialog.modal-dialog-centered(role="document" style="max-width: 500px")
