extends ../../layouts/LayoutTheme

append variables
  - 
    var breadcrumb = [
      {
        label: 'Pages',
        href: '#!'
      },
      {
        label: 'Pricing',
        href: '#!',
        active: true
      }
    ];

mixin PricingCard(data)
  img.mb-4.d-dark-none(src=`${CWD}assets/img/spot-illustrations/${data.icon}`, alt="", width='120' height="96")
  img.mb-4.d-light-none(src=`${CWD}assets/img/spot-illustrations/dark_${data.icon}`, alt="", width='120' height="96")
  .mb-sm-5.pricing-column-title-box
    h3.mb-2=data.title
    p.text-800.mb-0.pe-3!=data.description
  .d-flex.align-items-center.mb-4
    h3.display-3.fw-bolder=data.price
    if(data.price !== 'Free')
      h5.fs-0.fw-normal.ms-1 / month
  button.btn.btn-lg.w-100.mb-6(class=data.buyBtnClass) Buy
  h5.mb-4 Whatâ€™s included
  ul.fa-ul(style='--fa-li-margin: 1.5em;')
    li.text-800.mb-2
        span.fa-li
          span.fas.fa-check.text-primary
        | Timeline
    li.mb-2(class=data.features.advanced_search ? 'text-900' : 'text-500')
      span.fa-li.me-2.stack-icon-item
        span.fa-stack.fs--3
          span.fas.fa-circle.fa-stack-2x(class=data.features.advanced_search ? 'text-success' : 'text-300')
          span.fas.fa-stack-1x.fa-inverse(class=data.features.advanced_search ? 'fa-check text-white' : 'fa-times text-600')
      | Advanced Search
    li.mb-2(class=data.features.custom_fields ? 'text-900' : 'text-500')
      span.fa-li.me-2.stack-icon-item
        span.fa-stack.fs--3
          span.fas.fa-circle.fa-stack-2x(class=data.features.custom_fields ? 'text-success' : 'text-300')
          span.fas.fa-stack-1x.fa-inverse(class=data.features.custom_fields ? 'fa-check text-white' : 'fa-times text-600')
      | Custom fields
      if data.features.newBadge
        span.badge.badge-phoenix.badge-phoenix-primary.ms-2.fs--2 New
    li.mb-2(class=data.features.task_dependencies ? 'text-900' : 'text-500')
      span.fa-li.me-2.stack-icon-item
        span.fa-stack.fs--3
          span.fas.fa-circle.fa-stack-2x(class=data.features.task_dependencies ? 'text-success' : 'text-300')
          span.fas.fa-stack-1x.fa-inverse(class=data.features.task_dependencies ? 'fa-check text-white' : 'fa-times text-600')
      | Task dependencies
    li.mb-2(class=data.features.private_teams ? 'text-900' : 'text-500')
      span.fa-li.me-2.stack-icon-item
        span.fa-stack.fs--3
          span.fas.fa-circle.fa-stack-2x(class=data.features.private_teams ? 'text-success' : 'text-300')
          span.fas.fa-stack-1x.fa-inverse(class=data.features.private_teams ? 'fa-check text-white' : 'fa-times text-600')
      | Private teams & projects


