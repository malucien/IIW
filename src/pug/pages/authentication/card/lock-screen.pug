extends ../../../layouts/LayoutTheme
include ../../../layouts/LayoutCardAuth

block wrapperContent
  +LayoutCardBasic({img:37, title: 'Unlock now', text: 'Type your password'})
    .auth-form-box
      .text-center.mb-5
        .avatar.avatar-4xl.mb-4
          img.rounded-circle(src=`${CWD}assets/img/team/30.webp`, alt='')
        h2.text-1000 
          span.fw-normal Hello 
          | John Smith
        p.text-700 Enter your password to access the admin
      input#password.form-control.mb-3(type='password' placeholder='Enter Password')
      a.btn.btn-primary.w-100(href=`${CWD}${paths['default-dashboard']}`) Sign In