extends ../../../layouts/LayoutTheme
include ../../../layouts/LayoutCardAuth

block wrapperContent
  +LayoutCardBasic({img:37, title: "Forgot password", text: "Enter your email", page: 'forgot-pasword'})
    .auth-form-box
      .text-center
        a(href=`${CWD}${paths['default-dashboard']}`).d-flex.flex-center.text-decoration-none.mb-4
          +Logo({text:false,width:58}).fw-bolder.fs-5.d-inline-block
        h4.text-1000 Forgot your password?
        p.text-700.mb-5 Enter your email below and we will send <br class='d-none d-lg-block'> you a reset link
        form.d-flex.align-items-center.mb-5&attributes(attributes)
          input#email.form-control.flex-1(type='email' placeholder='Email')
          button.btn.btn-primary.ms-2
            | Send
            span.fas.fa-chevron-right.ms-2
        a.fs--1.fw-bold(href="#!") Still having problems?