extends ../../../layouts/LayoutTheme
include ../../../layouts/LayoutCardAuth

block wrapperContent
 +LayoutCardBasic({img:37, title: 'Login to your account', text: 'Or create one now', link: `${CWD}${paths['card-signup']}`})
    .auth-form-box
      +SocialButtons({title:'Sign in'})
      .position-relative
        hr.bg-200.mt-5.mb-4
        .divider-content-center.bg-white or use email
      .mb-3.text-start
        label.form-label(for='email') Email address
        .form-icon-container
          input#email.form-control.form-icon-input(type='email' placeholder='name@example.com')
          span.fas.fa-user.text-900.fs--1.form-icon
      .mb-3.text-start
        label.form-label(for='password') Password
        .form-icon-container
          input#password.form-control.form-icon-input(type='password' placeholder='Password')
          span.fas.fa-key.text-900.fs--1.form-icon
      .row.flex-between-center.mb-7
        .col-auto
          .form-check.mb-0
            input#basic-checkbox.form-check-input(type='checkbox', checked='checked')
            label.form-check-label.mb-0(for='basic-checkbox') Remember me
        .col-auto
          a.fs--1.fw-semi-bold(href=`${CWD}pages/authentication/card/forgot-password.html`) Forgot Password?
      button.btn.btn-primary.w-100.mb-3 Sign In
      .text-center
        a.fs--1.fw-bold(href=`${CWD}${paths['card-signup']}`) Create an account