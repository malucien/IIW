mixin LatestReviewsTableRow(data,index)
  tr.hover-actions-trigger.btn-reveal-trigger.position-static
    td.fs--1.align-middle.ps-0
      .form-check.mb-0.fs-0
        input.form-check-input(type='checkbox' data-bulk-select-row!=data)
    td.align-middle.product.white-space-nowrap.py-0
      .rounded-2.border
        img(src=`${CWD}assets/img/${data.productImage}` alt="" width=53)
    td.align-middle.product.white-space-nowrap
      a.fw-semi-bold(href=`${CWD}${paths['e-commerce-fe-product-details']}`)=`${data.product.slice(0,46)}${data.product.length > 46 ? '...' : '' }`
    td.align-middle.customer.white-space-nowrap
      a(href='#!').d-flex.align-items-center
        .avatar.avatar-l
            if data.customer.avatar
              img.rounded-circle(src=`${CWD}assets/img${data.customer.avatar}`, alt="" class=data.customer.avatarPlaceholder ? 'avatar-placeholder' : '')
            else
              .avatar-name.rounded-circle
                span=data.customer.name.charAt(0).toUpperCase()
        h6.mb-0.ms-3.text-900=data.customer.name
    td.align-middle.rating.white-space-nowrap.fs--2
      +Rating(data.rating)
    td.align-middle.review(style='min-width:350px;')
      p.fs--1.fw-semi-bold.text-1000.mb-0!=`${data.review.slice(0,134)}${data.review.length > 134 ? `...<a href='#!'>See more</a>` : '' }`
    td.align-middle.text-start.ps-5.status

      span.badge.badge-phoenix.fs--2(class=`badge-phoenix-${data.status.badge}`)
        span.badge-label=data.status.title
        span.ms-1(data-feather=data.status.icon style='height:12.8px;width:12.8px;')
    td.align-middle.text-end.time.white-space-nowrap
      .hover-hide
        h6.text-1000.mb-0=data.time
    td.align-middle.white-space-nowrap.text-end.pe-0
      .position-relative
        .hover-actions
          button.btn.btn-sm.btn-phoenix-secondary.me-1.fs--2
            span.fas.fa-check
          button.btn.btn-sm.btn-phoenix-secondary.fs--2
            span.fas.fa-trash
      +DashboardDropdown.fs--2


