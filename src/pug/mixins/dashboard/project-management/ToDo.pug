                .mb-7
                  +SubTasks
                .mb-3
                  +Files({itemPaddingClass: 'px-0 pt-4 pb-3',imgMaxWidth:230})
                a.fw-bold.fs--1.text-decoration-none(href='#!')
                  span.fas.fa-plus.me-1
                  | Add file(s)
            .col-12.col-lg-5
              .py-6
                h4.mb-4.text-black Others Information
                +OthersInformation

