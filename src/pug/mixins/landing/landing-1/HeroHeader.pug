							.position-absolute.h-100.top-0.d-flex.align-items-center.end-0
								img.pt-7.pt-md-0.w-100.shadow-lg.d-dark-none.rounded-2(src=`${CWD}assets/img/bg/bg-28.png` alt='hero-header')
								img.pt-7.pt-md-0.w-100.shadow-lg.d-light-none.rounded-2(src=`${CWD}assets/img/bg/bg-29.png` alt='hero-header')

