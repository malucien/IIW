mixin HeroHeader
	section.bg-white.pb-8#home
		.container-small.hero-header-container.px-lg-7.px-xxl-3
			.row.align-items-center
				.col-12.col-lg-auto.order-0.order-md-1.text-end.order-1
					.position-relative.p-5.p-md-7.d-lg-none
						+Background({
							image: `${CWD}assets/img/bg/bg-23.png`,
							attrs: {
								style: {
									'background-size': 'contain'
								}
							}
						})
						.position-relative
							img.w-100.shadow-lg.d-dark-none.rounded-2(src=`${CWD}assets/img/bg/bg-31.png` alt='hero-header')
							img.w-100.shadow-lg.d-light-none.rounded-2(src=`${CWD}assets/img/bg/bg-30.png` alt='hero-header')
					.hero-image-container.position-absolute.top-0.bottom-0.end-0.d-none.d-lg-block
