mixin ProfileCard
  .card&attributes(attributes)
    .card-body
      .border-bottom.border-dashed.border-300.pb-4
        .row.align-items-center.g-3.g-sm-5.text-center.text-sm-start
          .col-12.col-sm-auto
            input#avatarFile.d-none(type="file")
            label.cursor-pointer.avatar.avatar-5xl(for="avatarFile")
              img.rounded-circle(src=`${CWD}assets/img/team/15.webp`, alt="")
          .col-12.col-sm-auto.flex-1
            h3 Ansolo Lazinatov
            p.text-800 Joined 3 months ago
            div
              a.me-2(href='#!')
                span.fab.fa-linkedin-in.text-400.hover-primary
              a.me-2(href='#!')
                span.fab.fa-facebook.text-400.hover-primary
              a(href='#!')
                span.fab.fa-twitter.text-400.hover-primary

      //- .card-footer.border-0
      .d-flex.flex-between-center.pt-4
        div
          h6.mb-2.text-800 Total Spent
          h4.fs-1.text-1000.mb-0 $894
        .text-end
          h6.mb-2.text-800 Last Order
          h4.fs-1.text-1000.mb-0 1 week ago
        .text-end
          h6.mb-2.text-800 Total Orders
          h4.fs-1.text-1000.mb-0 97 

mixin AddressCard
