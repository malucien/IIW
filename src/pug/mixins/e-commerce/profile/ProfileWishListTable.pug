  #productWishlistTable.border-y(data-list!={
    valueNames: ["products", "color", "size", "price", "quantity", "total"],
    page: 5,
    pagination: true
  })
    .table-responsive.scrollbar
      table.table.fs--1.mb-0
        thead
          tr
            th.sort.white-space-nowrap.align-middle.fs--2(scope='col' style='width:7%;')
            th.sort.white-space-nowrap.align-middle(scope='col' style='width:30%; min-width:250px;' data-sort="products") PRODUCTS
