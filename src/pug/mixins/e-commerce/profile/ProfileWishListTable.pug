mixin ProfileWishlistTableRow(data,index)
  tr.hover-actions-trigger.btn-reveal-trigger.position-static
    td.align-middle.white-space-nowrap.ps-0.py-0
      .border.rounded-2.d-inline-block
        img(src=`${CWD}assets/img/${data.productImage}` alt="" width=53)
    td.products.align-middle.pe-11
      a.fw-semi-bold.mb-0.line-clamp-1(href='#!')=data.product
    td.color.align-middle.white-space-nowrap.fs--1.text-900=data.color
    td.size.align-middle.white-space-nowrap.text-700.fs--1.fw-semi-bold=data.size
    td.price.align-middle.text-900.fs--1.fw-semi-bold.text-end=data.price
    td.total.align-middle.fw-bold.text-1000.text-end.text-nowrap.pe-0
      //- .d-flex.align-items-center.justify-content-end
      //- a.mb-0.fs--2.text-500.fw-bold.text-decoration-none(href="#")
      button.btn.btn-sm.text-500.hover-text-600.me-2
        span.fas.fa-trash
      button.btn.btn-primary.fs--2
        span.fas.fa-shopping-cart.me-1.fs--2
        |Add to cart



