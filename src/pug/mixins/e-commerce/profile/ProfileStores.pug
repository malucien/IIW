mixin ProfileStoresTableRow(data,index)
  tr.hover-actions-trigger.btn-reveal-trigger.position-static
    td.align-middle.white-space-nowrap.ps-0.py-0
      img(src=`${CWD}assets/img/${data.productImage}` alt="" width=53)
    td.products.align-middle
      a.fw-semi-bold.mb-0(href='#!')=`${data.product.slice(0,138)}${data.product.length > 138 ? '...' : '' }`
    td.color.align-middle.white-space-nowrap.fs--1.text-900
      +Rating(data.rating)
    td.size.align-middle.white-space-nowrap.text-primary.fs--1.fw-bold.text-end=data.orders
    td.price.align-middle.text-end.text-900.fw-semi-bold=data.total
    td.price.align-middle.text-700.fs--1.text-end=data.date
    td.total.align-middle.fw-bold.text-1000.text-end
      +DashboardDropdown

