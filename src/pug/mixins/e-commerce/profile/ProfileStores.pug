mixin HoverDropdown(iconClass)
  .font-sans-serif.btn-reveal-trigger
    button.btn.btn-sm.dropdown-toggle.dropdown-caret-none.transition-none.btn-reveal.p-2.lh-1.bg-100.rounded-1&attributes(attributes)(type='button' data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false" data-bs-reference="parent")
      span.fas.fa-ellipsis-h.fs--1(class=iconClass)
    .dropdown-menu.dropdown-menu-end.py-2
      a(href='#!').dropdown-item View
      a(href='#!').dropdown-item Export
      .dropdown-divider
      a(href='#!').dropdown-item.text-danger Remove

mixin StoreItem(item)
  .col-6.col-sm-4.col-md-3.col-lg-2.hover-actions-trigger.btn-reveal-trigger
    .border.d-flex.flex-center.rounded-3.mb-3.p-4(style='height:180px;')
      img.mw-100(src=`${CWD}assets/img/${item.image}` alt=item.name)
    h5.mb-2=item.name
    .mb-1.fs--1
      +Rating(item.rating)
    p.text-500.fs--1.mb-2.fw-semi-bold=`(${item.people} people rated)`
    a.btn.btn-link.p-0(href="#!")
      | Visit Store
      span.fas.fa-chevron-right.ms-1.fs--2
    .hover-actions.top-0.end-0.mt-2.me-3
      +HoverDropdown

