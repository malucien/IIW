mixin ShippingRadio(data)
	.col-12.col-md-6
		.d-flex.flex-wrap.align-items-center.mb-3
			.form-check.mb-0
				input.form-check-input(type='radio' name='shippingRadio' checked=data.checked id=data.id)
				label.form-check-label.fs-0.text-900(for=data.id)=data.shipping
			span.d-inline-block.text-1100.fw-bold.ms-2=data.price
			
			if data.badge
				span.badge.badge-phoenix.badge-phoenix-warning.ms-2.ms-lg-4.ms-xl-2=data.badge
		.ps-4
			h6.text-700.mb-2 Est. delivery:
				!=data.date
			h6.text-info.lh-base.mb-0=data.time

