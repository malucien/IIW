mixin PaymentMethod
	h3.mb-5 Payment Method
	.row.g-4.mb-7
		.col-12
			.row.gx-lg-11
				.col-12.col-md-auto
					.d-flex
						.form-check
							input.form-check-input#creditCard(type='radio' name='paymentMethod' checked)
							label.form-check-label.fs-0.text-900.me-3(for='creditCard') Credit card
						img.h-100.me-2.ms-4.ms-md-0(src=`${CWD}assets/img/logos/visa.png`, alt="")
						img.h-100.me-2(src=`${CWD}assets/img/logos/discover.png`, alt="")
						img.h-100.me-2(src=`${CWD}assets/img/logos/mastercard.png`, alt="")
						img.h-100(src=`${CWD}assets/img/logos/american_express.png`, alt="")
				.col-12.col-md-auto
					.form-check
						input.form-check-input#paypal(type='radio' name='paymentMethod')
						label.form-check-label.fs-0.text-900(for='paypal') Paypal	
				.col-12.col-md-auto
					.form-check
						input.form-check-input#coupon(type='radio' name='paymentMethod')
						label.form-check-label.fs-0.text-900(for='coupon') Coupon	
		.col-md-6
			label.form-label.fs-0.text-1000.ps-0.text-none(for='selectCard') Select card
			select#selectCard.form-select.text-black
				option(selected='selected') select a card
				option(value='visa') Visa
				option(value='discover') Discover
				option(value='mastercard') Mastercard
				option(value='american-express') American Express
		.col-md-6
			label.form-label.fs-0.text-1000.ps-0.text-none(for='inputCardNumber') Card number
			input#inputCardNumber.form-control(type='number' placeholder="Enter card number" aria-label="Card number")
		.col-12
			label.form-label.fs-0.text-1000.ps-0.text-none(for='inputName') Full name
			input#inputName.form-control(type='text' placeholder='Ansolo Lazinatov' aria-label="Full name")
		.col-md-6
			label.form-label.fs-0.text-1000.ps-0.text-none Expires on
			.d-flex
				select.form-select.text-black.me-3
					option(selected='selected') Month
					option January
					option February
					option March
				select.form-select.text-black
					option(selected='selected') Year
					- var n = 1990
						while n < 2023
							option(value=n)=n++
		.col-md-6
			label.form-label.fs-0.text-1000.ps-0.text-none(for='inputCardCVC') CVC
			input#inputCardCVC.form-control(type='number' placeholder="Enter a valid CVC" aria-label="CVC")
		.col-12
			.form-check
				input#gridCheck.form-check-input(type='checkbox')
				label.form-check-label.text-black.fs-0(for='gridCheck') Save Card Details
	.row.g-2.mb-5.mb-lg-0
		.col-md-8.col-lg-9.d-grid
			button.btn.btn-primary(type='submit') Pay $695.20
		.col-md-4.col-lg-3.d-grid
			button.btn.btn-phoenix-secondary.text-nowrap(type='submit') Save Order and Exit


