		.col-md-6
			label.form-label.fs-0.text-1000.ps-0.text-none(for='inputEmail') Email
			input#inputEmail.form-control(type='email' placeholder='Email')

		.col-md-6
			label.form-label.fs-0.text-1000.ps-0.text-none(for='inputPhone') Phone
			input#inputPhone.form-control(type='tel' placeholder='+1234567890')

