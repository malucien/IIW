mixin CustomerRatingsTableRow(data,index)
  tr.hover-actions-trigger.btn-reveal-trigger.position-static
    td.align-middle.product.white-space-nowrap
      a.fw-semi-bold(href="#!")=`${data.product.slice(0,33)}${data.product.length > 33 ? '...' : '' }`
    td.align-middle.rating.white-space-nowrap.fs--2
      +Rating(data.rating)
    td.align-middle.review(style='min-width:350px;')
      p.fw-semi-bold.text-1000.mb-0!=`${data.review.slice(0,117)}${data.review.length > 117 ? `...<a href='#!'>See more</a>` : '' }`
    td.align-middle.text-end.status
      span.badge.badge-phoenix.fs--2(class=`badge-phoenix-${data.status.badge}`)
        span.badge-label=data.status.title
        span.ms-1(data-feather=data.status.icon style='height:12.8px;width:12.8px;')
    td.align-middle.text-end.date.white-space-nowrap
      p.text-700.mb-0=data.time
    td.align-middle.white-space-nowrap.text-end.pe-0
      +DashboardDropdown.fs--2

