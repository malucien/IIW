						.avatar-name.rounded-circle
							span=data.customer.name.charAt(0).toUpperCase()
				div
					a(href='#!').fs-0.fw-bold=data.customer.name
					.d-flex.align-items-center
						p.mb-0.text-1000.fw-semi-bold.fs--1.me-2=data.customer.designation
						span.badge.badge-phoenix(class=data.customer.status.type)=data.customer.status.label
		td.email.align-middle.white-space-nowrap.fw-semi-bold.text-1000.ps-4.border-end=data.email
		td.phone.align-middle.white-space-nowrap.fw-semi-bold.text-1000.ps-4.border-end=data.phone
		td.contact.align-middle.white-space-nowrap.ps-4.border-end.fw-semi-bold.text-1000=data.contact
		td.company.align-middle.white-space-nowrap.text-600.ps-4.border-end.fw-semi-bold.text-1000=data.company
		td.date.align-middle.white-space-nowrap.text-600.ps-4.text-700=data.date	
