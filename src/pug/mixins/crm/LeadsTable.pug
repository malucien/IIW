	tr.hover-actions-trigger.btn-reveal-trigger.position-static
		td.fs--1.align-middle
			.form-check.mb-0.fs-0
				input.form-check-input(type='checkbox' data-bulk-select-row!=data)

		td.name.align-middle.white-space-nowrap
			.d-flex.align-items-center
				.avatar.avatar-xl.me-3
					if data.customer.avatar
						img.rounded-circle(src=`${CWD}assets/img${data.customer.avatar}`, alt="" class=data.customer.placeholder ? 'avatar-placeholder' : '' )
