mixin TotalSalesChart
  .row.flex-between-center.mb-3.g-3
    .col-auto
      h4.text-black Task completed over time
      p.text-700.mb-0 Hard works done across all projects
    .col-8.col-sm-4
      select.form-select.form-select-sm
        option Mar 1 - 31, 2022
        option April 1 - 30, 2022
        option May 1 - 31, 2022
  .echart-completed-task-chart(data-echart-responsive style='min-height:200px;width:100%')

mixin ChartLegend(legend)
  .row.justify-content-center.justify-content-sm-between.g-5.g-sm-0.mb-2
    .col
      .d-flex.align-items-center
        .bullet-item.me-2(class=`bg-${legend.bg}`)
        h6.text-900.fw-semi-bold.flex-1.mb-0=legend.label
    .col-auto
      h6.text-900.fw-semi-bold.mb-0=legend.value

mixin WorkLoads
  -
    var legends = [
      {
        label: 'Shantinan Mekalan',
        value: '72%',
        bg: 'primary'
      },
      {
        label: 'Makena Zikonn',
        value: '18%',
        bg: 'primary-200'
      },
      {
        label: 'Meena Kumari',
        value: '10%',
        bg: 'info'
      },
    ]
  .mb-5
    h4.text-black Work loads
    h6.text-700 Last 7 days
  .echart-top-coupons.mb-5(style='height:115px;width:100%;')
  .row.justify-content-center
    .col-auto.col-sm-12
      each legend in legends
        +ChartLegend(legend)

