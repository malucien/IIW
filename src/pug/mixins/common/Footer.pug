mixin Footer
  //- footer.footer&attributes(attributes)
  footer.footer&attributes(attrsFooter)
    .row.g-0.justify-content-between.align-items-center.h-100
      .col-12.col-sm-auto.text-center
        p.mb-0.mt-2.mt-sm-0.text-900 Thank you for creating with #{name}
          span.d-none.d-sm-inline-block
          span.d-none.d-sm-inline-block.mx-1 |
          br.d-sm-none 
          | #{ new Date().getFullYear() } &copy;
          a.mx-1(href="https://themewagon.com") Themewagon
      .col-12.col-sm-auto.text-center
        p.mb-0.text-600=version
