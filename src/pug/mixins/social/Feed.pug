mixin Comments(config)
  .d-flex.align-items-start&attributes(attributes)
    .avatar.avatar-m.status-online.me-2
      img.rounded-circle(src=`${CWD}assets/img${config.avatar}` alt)
    .flex-1
      .d-flex.align-items-center
        a.fw-bold.mb-0.text-decoration-none.text-black(href="#!")=config.name
        span.text-600.fw-semi-bold.fs--2.ms-2=config.time
      p.mb-0=config.comment
      if config.reply
        button.btn.btn-link.p-0.text-900.text-decoration-none.fw-bolder.mb-2(type='button')
          span.fa-solid.fa-reply.fs--2.me-1
          span.d-inline-block.fw-bold.fs--2 Reply
        each reply in config.reply
          +Comments(reply).mb-3

