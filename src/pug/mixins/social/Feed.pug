mixin Post(config,index)
  .mb-5
    .card.mb-4.overflow-hidden
      .card-body.p-3.p-sm-4
        .border-bottom.mb-3
          .d-flex.align-items-center.mb-3
            .avatar.avatar-xl.status-online.me-2
              img.rounded-circle.border.border-2.border-white(src=`${CWD}assets/img${config.avatar}` alt)
            .flex-1
              a.fw-bold.mb-0.text-decoration-none.text-black(href="#!")=config.name
              p.fs--2.mb-0.text-600.fw-semi-bold
                |#{config.time}
                if config.location
                  span.fa-solid.fa-circle.text-300(data-fa-transform='shrink-10 down-2')
                  |#{config.location}
                  span.fa-solid.fa-circle.text-300(data-fa-transform='shrink-10 down-2')
                  span.fa-solid.fa-earth-americas.text-900
            +RevealBtn
          p.text-800=config.post		
          if config.images
            .row.g-1.mb-5
              each image in config.images
                div(class=image.classes)
                  a(href=`${CWD}assets/img/${image.src}` data-gallery=`gallery-posts-${index}`)
                    img.rounded.h-100.w-100(src=`${CWD}assets/img/${image.src}` alt='...')
        .d-flex
          button.btn.btn-link.p-0.me-3.fs--2.fw-bolder(type='button')
            span.fa-solid.fa-heart.me-1
            =config.likes
          button.btn.btn-link.text-900.p-0.fs--2.me-3.fw-bolder(type='button')
            span.fa-solid.fa-comment.me-1
            =config.comment
          button.btn.btn-link.text-900.p-0.fs--2.me-2.fw-bolder(type='button')
            span.fa-solid.fa-share.me-1
            =config.shares
      .bg-100.border-top.p-3.p-sm-4
        if config.comments 
          each comment in config.comments 
            +Comments(comment)
        +CommentField(config.commentInputAvatar)

